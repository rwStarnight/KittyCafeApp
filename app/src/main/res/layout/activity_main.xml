<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="io.github.rwstarnight.kittycafeapp.MainActivity">

    <RelativeLayout

        android:layout_width="395dp"
        android:layout_height="587dp"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/image1"
            android:src="@drawable/kittycafe1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:scaleType="centerCrop"
            />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="KITTY CAFE"
            android:textStyle="bold"
            android:textSize="28sp"
            android:textColor="#FFFFFF"
            android:paddingTop="20dp"
            android:paddingLeft="30dp"
            android:layout_alignParentTop="true"
            />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time: 10:30 am - 8:30 pm"
            android:textSize="18sp"
            android:paddingTop="10dp"
            android:paddingLeft="30dp"
            android:layout_below="@+id/image1"
             />

        <TextView
            android:id="@+id/contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Telephone: 1(687)000-0000"
            android:textSize="18sp"
            android:paddingBottom="5dp"
            android:paddingLeft="30dp"
            android:layout_below="@+id/time"
            />

        <TextView
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address: 123 Rose Garden, Toronto"
            android:textSize="18sp"
            android:paddingBottom="10dp"
            android:paddingLeft="30dp"
            android:layout_below="@id/contact"
            />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
